---
import {Icon} from "astro-icon"
const {title} = Astro.props
---


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <slot name="meta-tags"/>
    <title>{title}</title>
    <link rel="shortcut icon" href="/favicon.ico">
</head>
<body class="light">
    <!-- This is a pane used for the simple transition animation -->
    <div class="pane">
        
    </div>
    <button id="changer">
        <Icon
            name="mdi:theme-light-dark"
            width="20px"
        />
    </button>
    <div class="container">
        <slot />
    </div>
    <div class="footer">
        Ayushman Bilas Thakur ❤️ 2023
    </div>
</body>

<script src="../scripts/LightDarkDetector.ts"/>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap');


:root{
    --bg-light:                 #ffffff;
    --text-primary-light:       #22223b;
    --text-secondary-light:     #4a4e69;
    --card-bg-light:            #cfd7de;
    --punch-light:              #5150a5;
    --punch-contrast-light:     white;
    --highlight-light:          #ffa46e; 
    --highlight-contrast-light: #141420;

    --bg-dark:                 #1b1c27;
    --text-primary-dark:       #f0f0fd;
    --text-secondary-dark:     #b1b4c5;
    --card-bg-dark:            #333646;
    --punch-dark:              #ffc25c;
    --punch-contrast-dark:     #1d1d2b;
    --highlight-dark:          #2b4188; 
    --highlight-contrast-dark: #eee;

    --transition-animation-timing: 0.7s;
}

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}


.pane {
    position: fixed;
    pointer-events: none;
    width: 100dvw;
    height: 100dvh;
    /* background-color: var(--bg-dark); */
    z-index: 999;
}

.light .pane{
    animation: darktolight var(--transition-animation-timing) ease-in-out forwards;
}

.dark .pane{
    animation: lighttodark var(--transition-animation-timing) ease-in-out forwards;
}

@keyframes darktolight {
    0%{
        opacity: 1;
        background-color: var(--bg-dark);
    }
    60%{
        opacity: 1;
        background-color: var(--bg-light);
    }
    100%{
        opacity: 0;
        background-color: var(--bg-light);
    }
}

@keyframes lighttodark {
    0%{
        opacity: 1;
        background-color: var(--bg-light);
    }
    60%{
        opacity: 1;
        background-color: var(--bg-dark);
    }
    100%{
        opacity: 0;
        background-color: var(--bg-dark);
    }
}

body::-webkit-scrollbar {
  width: 1em;
}
 
body::-webkit-scrollbar-track {
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
}
 
body::-webkit-scrollbar-thumb {
  background-color: darkgrey;
  outline: 1px solid slategrey;
}

@media(max-width:500px){
    body::-webkit-scrollbar {
       width: 0em;
    }
}


body.light {
    --bg:             var(--bg-light);
    --text-primary:   var(--text-primary-light);
    --text-secondary: var(--text-secondary-light);
    --card-bg:        var(--card-bg-light);
    --punch:          var(--punch-light);
    --punch-contrast: var(--punch-contrast-light);
    --highlight:          var(--highlight-light);
    --highlight-contrast: var(--highlight-contrast-light);
}


body.dark {
    --bg:             var(--bg-dark);
    --text-primary:   var(--text-primary-dark);
    --text-secondary: var(--text-secondary-dark);
    --card-bg:        var(--card-bg-dark);
    --punch:          var(--punch-dark);
    --punch-contrast: var(--punch-contrast-dark);
    --highlight:          var(--highlight-dark);
    --highlight-contrast: var(--highlight-contrast-dark);

}


body{
    background: var(--bg);
    color: var(--text-secondary);
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
}

.container{
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

h1,h2,h3,h4,h5,h6{
    color: var(--text-primary);
    margin-bottom: 5px;
}

a{
    color: var(--punch);
}

#changer{
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.3s ease;
    background-color: var(--punch);
    color: var(--bg);
    border: none;
    z-index: 998;
}

#changer:hover,
#changer:hover > img {
    transform-origin: center;
    transform: scale(1.2);
}

#changer:hover > img {
    transform: scale(1.4);
}

.container{
    width: 90%;
    max-width: 1000px;
    margin: 0 auto;
    padding: 60px 0;
    padding-bottom: 20px;
    font-family: 'Nunito', sans-serif;
}

#myname{
    text-transform: capitalize;
}

.image img{
    width: 200px;
    height: 200%;
    border-radius: 50%;
}

.button{
    position: relative;
    margin-top: 15px;
    display: block;
    text-decoration: none;
    color: var(--punch-contrast);
    /* border: 2px solid var(--text-primary); */
    border: none;
    padding: 10px 20px;
    width: fit-content;
    border-radius: 10px;
    font-weight: bold;
    cursor: pointer;
    overflow: hidden;
    transition: color 0.5s ease;
}

.button::before,
.button::after
{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.button::after{
    background-color: var(--punch);
    z-index: -2;
}

.button::before{
    background-color: var(--text-primary);
    z-index: -1;
    transform: scaleX(0);
    transform-origin: left;
    transition: all 0.3s ease;
}

.button:hover::before{
    transform: scaleX(1);
}

.button:hover{
    color: var(--bg);transition: all 0.3s ease;
}

.container > div{
    margin-bottom: 40px;
}

.container div h3{
    margin-bottom: 5px;
}

.tech-container{
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    cursor: pointer;
}




.mb-3{
    margin-bottom: 20px;
}


.card a{
    text-decoration: none;
    transition: color 0.3s ease;
}

.card a .icon{
    transition: background-color 0.3s ease;
}

.card a:hover{
    color: var(--punch);
}

.card a:hover .icon{
    background-color: var(--punch);
}


.links{
    display: flex;
    gap: 10px;
    margin-top: 10px;
}

.footer{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    text-align: center;
    padding-bottom: 40px;
    font-weight: bold;
}

</style>